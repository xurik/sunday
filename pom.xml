	<properties>
		<maven.test.skip>false</maven.test.skip>
		<java-version>1.6</java-version>
		<file_encoding>GBK</file_encoding>
		<project_url>http://b2b-doc.alibaba-inc.com/pages/viewpage.action?pageId=35822763</project_url>
		<spring_version>3.1.2.RELEASE</spring_version>
	</properties>
